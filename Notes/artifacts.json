[
  {
    "typescript": {
      "compile": true
    }
  },
  {
    "pathBase": "Client",
    "outDir": ".",
    "copy": [
      "Client/Images/*",
      "Client/webmanifest.json",
      "Client/favicon.ico",
      "Client/icon.png"
    ]
  },
  {
    "pathBase": "Client/Codemirror",
    "outDir": "./lib/codemirror/theme",
    "copy": [
      "Client/Codemirror/*"
    ]
  },
  {
    "pathBase": "node_modules",
    "outDir": "./lib",
    "copy": [
      "node_modules/codemirror/lib/*",
      "node_modules/codemirror/mode/markdown/*"
    ]
  }
]